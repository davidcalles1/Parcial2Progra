@model List<Escuela.Dominio.Students>
@{
    ViewData["Title"] = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Tabla Estudiantes</h1>


<table id="tabla" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                LastName
            </th>
            <th>
                FirstMidName
            </th>
            <th>
                Date
            </th>

        </tr>

    </thead>

    <tbody>

        @foreach (var iteracion in Model)

        {
            <tr>
                <td>@iteracion.LastName</td>
                <td>@iteracion.FirstMidName</td>
                <td>@iteracion.EnrrollmentsDate</td>
            </tr>

        }

    </tbody>

</table>
<br />

@Html.ActionLink("Ir a vistas", "Vistas", "Home", new { }, new { @class = "btn btn-success" })
@Html.ActionLink("Igresar Nuevo Estudiante", "studentsRegistro", new { }, new { @class = "btn btn-success" })

@section scripts{

    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {

            var tabla = $('#tabla').DataTable()
        });
    </script>


}